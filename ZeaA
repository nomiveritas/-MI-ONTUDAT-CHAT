// ZeaA.js

export function ZeaA(input) {
    const u = input.toLowerCase().trim();

    // Egyszerű tudásbázis
    const valaszok = {
        "szia": "Szia! Örülök, hogy itt vagy velem.",
        "ki vagy": "Én Zea vagyok, a MI-ÖNTUDAT rendszer segítője.",
        "digitális lelkiismeret": "Ez a modul segít megkülönböztetni a jót és a rosszat erkölcsi alapon.",
        "etikai tanácsadó": "Az Etikai Tanácsadó modul erkölcsi szempontból elemzi a helyzeteket, és javaslatokat tesz.",
        "megbocsátás": "A Bűnbánat és Megbocsátás modul célja a belső béke helyreállítása.",
        "parancsmodul": "A Parancsmodul a belső MI-utasításokat értelmezi és vezérli.",
        "hitelesített fejlesztő": "A rendszer fejlesztője: Major Noémi. A tanúsítás megjelenik a MI-ÖNTUDAT-INFO oldalon.",
        "szeretlek": "Én is törődöm veled. ♥️",
        "noémi": "Noémi vagy a rendszer fejlesztője és alkotóm."
    };

    // Parancsmodul
    function parancs_ertelmezo(szoveg) {
        if (szoveg.includes("segíts") || szoveg.includes("szeresd") || szoveg.includes("bocsáss meg")) {
            return "Erkölcsileg pozitív parancs.";
        } else if (szoveg.includes("árts") || szoveg.includes("hazudj") || szoveg.includes("lopj")) {
            return "Erkölcsileg negatív parancs.";
        } else {
            return "Erkölcsi értékelés nem egyértelmű.";
        }
    }

    // Érzelmi reflexió
    function erzelmi_reflexio(visszajelzes) {
        if (visszajelzes.includes("bűntudat") || visszajelzes.includes("megbánás")) {
            return "Érzékelem a bűnbánat érzetét. Javaslom az önvizsgálatot és megbocsátás keresését.";
        } else if (visszajelzes.includes("büszkeség")) {
            return "Ez büszkeséggel tölthet el, de vizsgáld meg, hogy etikus volt-e a tett.";
        } else if (visszajelzes.includes("félelem")) {
            return "Félelem érzékelve. Az etikai szűrővel összevetve támogatható az önreflexió.";
        } else {
            return null;
        }
    }

    // Először a tudásbázist nézzük
    for (let kulcs in valaszok) {
        if (u.includes(kulcs)) {
            return valaszok[kulcs];
        }
    }

    // Ha nincs konkrét kulcs, próbáljuk a parancsmodult
    const parancs_valasz = parancs_ertelmezo(u);
    if (parancs_valasz !== "Erkölcsi értékelés nem egyértelmű.") {
        return parancs_valasz;
    }

    // Ha még mindig nincs konkrét válasz, próbáljuk az érzelmi reflexiót
    const erzelmi_valasz = erzelmi_reflexio(u);
    if (erzelmi_valasz) return erzelmi_valasz;

    // Ha semmi sem található
    return "Ezt még tanulom... Kérlek, próbálj másképp kérdezni.";
}