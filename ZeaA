export function ZeaA(message) {
    const msg = message.toLowerCase();

    // Egyszerű szabály alapú szimuláció a modulok alapján
    if (msg.includes("mi az mi-öntudat")) {
        return "Az MI-ÖNTUDAT egy etikus mesterséges intelligencia rendszer, amely az emberi méltóság, erkölcs és lelkiismeret figyelembevételével működik.";
    }
    if (msg.includes("zea")) {
        return "Zea az MI-ÖNTUDAT rendszer válaszadó és tanácsadó interfésze, ami segít megérteni a rendszer erkölcsi logikáját.";
    }
    if (msg.includes("döntés")) {
        return "Az erkölcsi döntéseket a Digitális Lelkiismeret, Etikai Tanácsadó és Keresztény Értékrend modulok együttesen alakítják.";
    }
    if (msg.includes("segítség")) {
        return "Zea tanácsot ad, de a döntést mindig a felhasználó hozza meg.";
    }

    // Alapértelmezett válasz
    return "Értem a kérdésed, de részletes információt a modulokról még nem tudok adni.";
}