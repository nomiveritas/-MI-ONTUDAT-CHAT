    <script>
        // H√°tt√©r r√©szecsk√©k l√©trehoz√°sa
        function createParticles() {
            const particleCount = 20;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // V√©letlenszer≈± m√©ret √©s poz√≠ci√≥
                const size = Math.random() * 4 + 2;
                const left = Math.random() * 100;
                const animationDuration = Math.random() * 10 + 10;
                const delay = Math.random() * 15;
                
                particle.style.width = size + 'px';
                particle.style.height = size + 'px';
                particle.style.left = left + '%';
                particle.style.animationDuration = animationDuration + 's';
                particle.style.animationDelay = delay + 's';
                
                document.body.appendChild(particle);
            }
        }
        
        // Oldal bet√∂lt√©se ut√°n r√©szecsk√©k l√©trehoz√°sa
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
        });
        
        // Extra interaktivit√°s - eg√©r k√∂vet√©s
        document.addEventListener('mousemove', function(e) {
            const words = document.querySelectorAll('.floating-word');
            const mouseX = e.clientX;
            const mouseY = e.clientY;
            
            words.forEach((word, index) => {
                const rect = word.getBoundingClientRect();
                const wordCenterX = rect.left + rect.width / 2;
                const wordCenterY = rect.top + rect.height / 2;
                
                const distanceX = mouseX - wordCenterX;
                const distanceY = mouseY - wordCenterY;
                const distance = Math.sqrt(distanceX * distanceX + distanceY * distanceY);
                
                if (distance < 200) {
                    const force = (200 - distance) / 200;
                    const moveX = (distanceX / distance) * force * 10;
                    const moveY = (distanceY / distance) * force * 10;
                    
                    word.style.transform = `translateX(${moveX}px) translateY(${moveY}px)`;
                } else {
                    word.style.transform = 'translateX(0px) translateY(0px)';
                }
            });
        });
    </script>
